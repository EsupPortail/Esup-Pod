{
  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 0,
     "analysis": {
        "filter": {
          "french_elision": {
            "type":         "elision",
            "articles_case": true,
            "articles": [
                "l", "m", "t", "qu", "n", "s",
                "j", "d", "c", "jusqu", "quoiqu",
                "lorsqu", "puisqu"
              ]
          },
          "french_stemmer": {
            "type":       "stemmer",
            "language":   "light_french"
          }
        },
        "analyzer": {
          "icu_french": {
            "tokenizer": "icu_tokenizer",
            "filter": [
              "french_elision",
              "icu_folding",
              "lowercase",
              "french_stemmer",
              "asciifolding"
            ]
          }
        }
      }
  },
